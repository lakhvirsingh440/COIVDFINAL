<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lassibrochat">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/lassi"
        android:layout_marginLeft="130dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. Lassi Bro"
        android:layout_marginTop="230dp"
        android:textSize="25dp"
        android:layout_marginLeft="-150dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi this is Dr. Lassi Bro. How can I help you"
        android:layout_marginTop="280dp"
        android:textSize="20dp"
        android:layout_marginLeft="-270dp"
        android:textColor="#E31E1E"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Hi, I want medicine for covid19"
        android:layout_marginTop="350dp"
        android:textSize="20dp"
        android:layout_marginLeft="-300dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK, then you can have para20 and your prescription code is CEGEP"
        android:layout_marginTop="400dp"
        android:textSize="20dp"
        android:layout_marginLeft="-380dp"
        android:textColor="#E31E1E"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    OK, Thanku dr"
        android:layout_marginTop="470dp"
        android:textSize="20dp"
        android:layout_marginLeft="-150dp"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/et_chatharman"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="-397dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:padding="8dp"
        android:background="#D9D9D9"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:ems="10"
        android:inputType="text" />
    <Button
        android:id="@+id/btn_chath"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="515dp"
        android:background="#A6F291"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:text="Chat"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"

        />

</LinearLayout>